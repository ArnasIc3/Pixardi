@{
    ViewData["Title"] = "Pixel Art Editor";
}

<h1 class="brand-title">Pixardi</h1>

<div class="container">
    <div class="canvas-layout">
        <!-- Left sidebar: tools + action buttons -->
        <aside class="sidebar">
            <div class="toolbar">
                <div class="tool-section">
                    <div class="tool-item active" data-tool="brush">
                        <img src="@Url.Content("~/icons/brush.svg")" alt="Brush" class="icon" width="20" height="20" />
                        <span>Brush</span>
                    </div>

                    <div class="tool-item" data-tool="eraser">
                        <img src="@Url.Content("~/icons/eraser.svg")" alt="Eraser" class="icon" width="20"
                            height="20" />
                        <span>Eraser</span>
                    </div>

                    <div class="tool-item" data-tool="fill">
                        <img src="@Url.Content("~/icons/fill-bucket.svg")" alt="Fill" class="icon" width="20"
                            height="20" />
                        <span>Fill</span>
                    </div>

                    <div class="tool-item" data-tool="virus">
                        <img src="@Url.Content("~/icons/virus.svg")" alt="Virus" class="icon" width="20" height="20" />
                        <span>Virus</span>
                    </div>
                </div>

                <div class="tool-section">
                    <div class="color-palette palette-in-toolbar">
                        <div class="color-option active" data-color="#000000" style="background-color: #000000;"></div>
                        <div class="color-option" data-color="#ff6b6b" style="background-color: #ff6b6b;"></div>
                        <div class="color-option" data-color="#4ecdc4" style="background-color: #4ecdc4;"></div>
                        <div class="color-option" data-color="#45b7d1" style="background-color: #45b7d1;"></div>
                        <div class="color-option" data-color="#96ceb4" style="background-color: #96ceb4;"></div>
                        <div class="color-option" data-color="#ffeaa7" style="background-color: #ffeaa7;"></div>
                        <div class="color-option" data-color="#fd79a8" style="background-color: #fd79a8;"></div>
                        <div class="color-option" data-color="#e17055" style="background-color: #e17055;"></div>
                        <div class="color-option" data-color="#a29bfe" style="background-color: #a29bfe;"></div>
                        <div class="color-option" data-color="#ffffff" style="background-color: #ffffff;"></div>
                    </div>
                </div>
            </div>

            <!-- action buttons placed under toolbar -->
            <div class="action-row">
                <button id="undoBtn" type="button" class="action-button undoBtn" title="Undo"
                    aria-label="Undo (Ctrl+Z)">
                    <img src="@Url.Content("~/icons/undo.svg")" alt="Undo" class="icon" width="20" height="20" />
                </button>
                <button id="clearBtn" type="button" class="action-button" title="Clear Canvas"
                    aria-label="Clear Canvas">
                    <img src="@Url.Content("~/icons/clear.svg")" alt="Clear" class="icon" width="20" height="20" />
                </button>
            </div>
        </aside>

        <!-- Right: canvas / grid -->
        <main class="canvas-area">
            <div class="grid-container">
                <!-- pixel grid expected by grid.js -->
                <div id="pixelGrid" class="grid" role="application" aria-label="Pixel canvas"></div>
            </div>
        </main>
    </div>

    <!-- Project management buttons (outside canvas-layout, below the grid) -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="project-controls">
            <button id="saveProjectBtn" class="project-btn save-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                    <polyline points="17,21 17,13 7,13 7,21"></polyline>
                    <polyline points="7,3 7,8 15,8"></polyline>
                </svg>
                Save Project
            </button>

            <button id="loadProjectBtn" class="project-btn load-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14,2 14,8 20,8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10,9 9,9 8,9"></polyline>
                </svg>
                Load Project
            </button>

            <button id="downloadPngBtn" class="project-btn download-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7,10 12,15 17,10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Download PNG
            </button>
        </div>
    }
</div>

@section Scripts {
    <script type="module" src="~/js/main.js" asp-append-version="true"></script>
}